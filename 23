# Zip the files
zip_path = '/mnt/data/cargobikeservices_site.zip'
with zipfile.ZipFile(zip_path, 'w', zipfile.ZIP_DEFLATED) as zipf:
    zipf.write('/mnt/data/index.html', 'index.html')
    zipf.write('/mnt/data/style.css', 'style.css')

zip_path
